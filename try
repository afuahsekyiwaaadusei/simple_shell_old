#include <stdio.h>
#include <stdlib.h>
#include "main.h"
#include <unistd.h>

/**
 *main - main function used for testing
 *
 *Return: always 0.
 */

int main() {
    char *line = NULL;
    size_t n = 0;
    ssize_t nread, nwrite;
    char buf[] = "$ ";
    
    nwrite = write(STDOUT_FILENO, buf, sizeof(buf));
    nread = getline(&line, &n, stdin);
    if (nread == -1)
	    perror("bug");
    printf("nread is %ld and nwrite is %ld\n", nread, nwrite);
    free(line);
    return 0;
}
